proc Sum(float $input[])
{
    float $result = 0;

    if (size($input) == 0) {
        print("please input a number");
    } else {
        for ($i = 0; $i < size($input); $i++)
        {
             $result += $input[$i];
        }     
    }

    print($result);
}

